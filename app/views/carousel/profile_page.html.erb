<div class="panel panel-default" style="padding-top: -10px">
  <div class="panel-heading">
    <h4>Personal Details</h4>
  </div>

    <div class="row panel-body">
      <div class="col-lg-2">
        <div  style="padding: 20px">
          <%= image_tag(current_user.picture, :class => 'list_image', width: 100,height: 100) %>
        </div>
      </div>

      <div class="col-lg-10">
        <% if user_signed_in? %>
          <div style="padding: 20px">
            <table>
              <tr>
                <td><b>ID: </b></td>
                <td><%= current_user.user_id %></td>
              </tr>
              <tr>
                <td><b>Name: </b></td>
                <td><%= current_user.user_name %></td>
              </tr>
              <tr>
                <td><b>Email: </b></td>
                <td><%= current_user.email %></td>
              </tr>
              <tr>
                <td><b>Mobile: </b></td>
                <td><%= current_user.mobile %></td>
              </tr>
            </table>
          </div>
        <% end %>
      </div>

    </div>
</div>