<!DOCTYPE html>
<html>
<head>
  <title>Online Registration System</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>

  <style>

    #container {
      border: solid 1px #5e5e5e;
      width: 48px;
      height: 48px;
    }

    #container img {
      width: 100%;
    }

    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}

    th {
      background-color: #3390FF;
      color: white;
    }
    fieldset {
      display: block;
      width: inherit;
      margin-left: 2px;
      margin-right: 2px;
      padding-top: 0.35em;
      padding-bottom: 0.625em;
      padding-left: 0.75em;
      padding-right: 0.75em;
      border:2px solid green;
      -moz-border-radius:8px;
      -webkit-border-radius:8px;
      border-radius:8px;
    }


  </style>

</head>
<body>

<div>
<nav class="navbar navbar-default navbar-fixed-top"  role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/carousel/slider">Online Registration System</a>

      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <% if user_signed_in? %>

      <% if current_user.role == "Student" %>
        <ul class="nav navbar-nav">
          <li class=""><a href="/carousel/profile_page">Profile</a></li>
          <li class=""><a href="/registration_informations/">Register Course</a></li>
          <li class=""><a href="/see_my_result/">Results</a></li>
        </ul>
      <% else %>
         <ul class="nav navbar-nav">
           <li class=""><a href="/carousel/profile_page">Profile</a></li>
           <li class=""><a href="/semesters/">Semesters</a></li>
           <li class=""><a href="/courses/">Courses</a></li>
           <li class=""><a href="/assign_course_to_semesters/">Assign Course to Semester</a></li>
           <li class=""><a href="/global_settings/">Current Semester</a></li>
           <li id="create" class=""><a href="/create_result/choose_student/">Create Results</a></li>
           <li class=""><a href="/create_result/show_result/">Send Results</a></li>
         </ul>
      <% end %>

      <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> </li>
          <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
      </ul>
    <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %></li>
          <li><%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %></li>
        </ul>
    <% end %>
    </div>

  </div>
</nav>
</div>
<br>
<% if notice %>
    <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
<% end %>


<%= yield %>

<script>
    $('.carousel').carousel({
        interval: 1000 //changes the speed
    });

    $('#logIn').click(function () {
        window.location.href= "<% carousel_profile_page_path %>"
    });

</script>

</body>
</html>
