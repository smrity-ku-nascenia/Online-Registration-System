
  <br><% @enrollment.each do |enrollment| %>
    <div>
      <fieldset>
        <legend><b>Semster : </b> <%= enrollment.semester.semester_name %></legend>

          <% if enrollment.status==("Passed") %>
              <table>
                <thead>
                <tr>
                  <th>Course Name</th>
                  <th>Marks</th>
                  <th>Grade</th>
                </tr>
                </thead>
                <tbody>
                <% index = 1 %>
                <% enrollment.registration_informations.each do |result| %>
                    <tr>
                      <td><%= result.course.course_name %></td>
                      <td><%= result.mark %></td>
                      <td><%= result.grade %></td>
                    </tr>
                <% end %>
                <tr style="background-color: #66afe9; color: white">
                  <td><b>CGPA</b></td>
                  <td></td>
                  <td><%= enrollment.cgpa %></td>
                </tr>
                </tbody>
              </table>
          <% else %>
              <p style="color: red">Result has not been published yet!</p>
          <% end %>
      </fieldset>
    </div>
  <% end %>
